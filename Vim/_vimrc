:"Pathogen plugin in order to handel the installation of every other plugin
execute pathogen#infect()
execute pathogen#helptags()

:set wildmenu
:set guioptions-=m
:set guioptions-=T
:set smartcase
:set number
:set hlsearch
:set expandtab
:set tabstop=2 shiftwidth=2 softtabstop=2
:set autoindent
"Allow to switch buffers without having to save its changes
:set hidden
"Leader
:let mapleader=","

syntax on
filetype on
filetype indent on
filetype plugin on

"Disable annoying beep sound when errors ocurr, it just clears the value to empty
set noerrorbells visualbell t_vb=
autocmd GUIEnter * set visualbell t_vb=

" Maximize window on start
if has("gui_running")
  " GUI is running or is about to start.
  " Maximize gvim windows.
  set lines=999 columns=999
endif

" Colorscheme 
if has("gui_running")
  :set background=dark
  :set t_Co=16
  :colorscheme solarized
else
  :colorscheme default
endif

" PLUGINS 

" ctrlp
set runtimepath^=~/.vim/bundle/ctrlp.vim

" nerdtree
nmap <F9> :NERDTreeToggle<CR>

nmap <Leader>n :bn<CR>
nmap <Leader>p :bp<CR>

"ctrlp.vim plugin => find files
"ag plugin => find words in files
"align


"Tab remap to omni-complete
function! InsertTabWrapper()
    let col = col('.') - 1
    if !col || getline('.')[col - 1] !~ '\k'
        return "\<tab>"
    else
        return "\<c-p>"
    endif
endfunction

inoremap <tab> <c-r>=InsertTabWrapper()<cr>
